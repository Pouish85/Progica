{% for message in app.flashes('success') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
{% endfor %}
<div class="flex flex-col 2xl:w-[1500px] xl:w-[1260px] lg:w-[1000px] md:w-[750px] sm:w-screen">
    <div class="flex flex-col">
        <div
            class="h-24 w-full border-b-2 border-gold-light bg-gradient-to-r from-black to-gold-light rounded-b-md"
        >
            <div class="flex justify-between items-center h-full">
                <a href="/" class="ml-4">
                    <img
                        src="{{ asset('/images/Progica.png') }}"
                        alt="Logo"
                        class="h-24"
                    />
                </a>
                <div class="text-center">
                    <h1 class="text-3xl text-gold-light font-extrabold">Progica</h1>
                    <p class="text-white font-extrabold">
                        Le meilleur moyen de passer de bonnes vacances
                    </p>
                </div>
                <div class=" pr-4">
                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    <div>
                        <h1>Salut {{app.user.prenom}}</h1>
                    </div>
                    <a href="{{ asset('/logout') }}"
                        class="rounded-full py-1 px-2 mr-2 hover:bg-gold-dark duration-500 border-[1px] border-gold-light hover:border-none"
                    >
                        Deconnexion
                    </a>
                    {% else %}
                    <a href="{{ asset('/signup') }}"
                        class="rounded-full py-1 px-2 mr-2 hover:bg-gold-dark duration-500 border-[1px] border-gold-light hover:border-none"
                    >
                        Inscription
                    </a>
                    <a
                        href="{{ asset('/signin') }}"
                        class="rounded-full py-1 px-2 hover:bg-gold-dark duration-500 border-[1px] border-gold-dark hover:border-none"
                    >
                        Connexion
                    </a>
                    {% endif %}
                    
                </div>
            </div>
        </div>
    </div>